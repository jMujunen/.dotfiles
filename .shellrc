# Env Vars
# -------
export EDITOR=micro
export MICRO_TRUECOLOR=1

export PYTHONPATH=$HOME/.ipython/profile_main/:$HOME/python/modules/:$HOME/python/scripts/:\
$HOME/python/:$HOME/python/scripts/bashhelpers/:$HOME/python/scripts/bashhelpers/ColorizeOutput/:\
$HOME/python/Projects/termllama/termllama/:$HOME/python/Projects/fsutils/:\
$HOME/python/Projects/fsutils/fsutils:$HOME/python/libs/hwutils/hwutils/:\
$HOME/python/Projects/hwutils:$HOME/python/Projects/hwutils/hwutils:\
$HOME/python/scripts/hass:$HOME/python/scripts/bashhelpers/pacman:\
$HOME/python/Projects/progress-bar/

export PATH=$HOME/.dotfiles/:$HOME/scripts/:$HOME/scripts/graphing/:\
$HOME/scripts/git_scripts/:$HOME/.local/bin:$PATH:$PYTHONPATH

# Git
# ---
GIT_COMMITTER_NAME="J Mujunen"
GIT_COMMITTER_EMAIL="jMujunen@github.com"

# ZSH
# ---
export ZDOTDIR=$HOME/.dotfiles
export HISTFILE=$ZDOTDIR/.zsh_history


export MAKEFLAGS="-j$(nproc)"

# Ollama
# ------
export OLLAMA_KEEP_ALIVE=30
export OLLAMA_MODELS=/home/joona/.ollama/models/
export OLLAMA_HOST=10.0.0.21:11434

# --------------------------------------------------------------- #

# Source dedicated alias file
[[ -f $HOME/.bash_aliases ]] && . $HOME/.bash_aliases
[[ -f $HOME/.dotfiles/.bash_aliases ]] && . $HOME/.dotfiles/.bash_aliases

# Source .consts (seperated for privacy)
[[ -f $HOME/.consts ]] && . $HOME/.consts
[[ -f $HOME/.dotfiles/.consts ]] && . $HOME/.dotfiles/.consts

# .bash_functions
[[ -f $HOME/.bash_functions ]] && . $HOME/.bash_functions
[[ -f $HOME/.dotfiles/.bash_functions ]] && . $HOME/.dotfiles/.bash_functions

