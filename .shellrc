# Source .bash_aliases_ (seperate from .bash_aliases for privacy)
[[ -f ~/.bash_aliases_ ]] && . ~/.bash_aliases_
[[ -f ~/.dotfiles/.bash_aliases_ ]] && ~/.dotfiles/.bash_aliases_

# .bash_aliases
[[ -f ~/.bash_aliases ]] && . ~/.bash_aliases
[[ -f ~/.dotfiles/.bash_aliases ]] && . ~/.dotfiles/.bash_aliases

# .bash_functions
[[ -f ~/.bash_functions ]] && . ~/.bash_functions
[[ -f ~/.dotfiles/.bash_functions ]] && . ~/.dotfiles/.bash_functions

# Sys stats
clear
if [ "$(whoami)" != "root" ]; then
	neofetch
fi

